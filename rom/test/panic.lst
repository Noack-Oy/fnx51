                   ; Aborts if no null terminator is found after 256 bytes.
                   
                   print_text:
0052: C0 E0                push    ACC
0054: E8                   mov     a,      r0
0055: C0 E0                push    ACC
                   
0057: E4                   clr     a
0058: F8                   mov     r0,     a
                   print_text__loop:
0059: 93                   movc    a,      @dptr+a
005A: 60 06                jz      print_text__end
005C: 11 4D                acall   print_char
005E: 08                   inc     r0
005F: E8                   mov     a,      r0
0060: 70 F7                jnz     print_text__loop
                   
                   print_text__end:
0062: D0 E0                pop     ACC
0064: F8                   mov     r0,     a
0065: D0 E0                pop     ACC
0067: 22                   ret
                   
