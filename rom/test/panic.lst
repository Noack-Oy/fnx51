006C: C0 E0                push    ACC
006E: 54 0F                anl     a,      #0x0f
0070: 24 90                add     a,      #0x90
0072: D4                   da      a
0073: 34 40                addc    a,      #0x40
0075: D4                   da      a
0076: 44 20                orl     a,      #0x20   ; lower case
0078: 11 4D                acall   print_char
007A: D0 E0                pop     ACC
